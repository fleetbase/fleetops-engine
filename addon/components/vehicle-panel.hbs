<Overlay @position="right" @noBackdrop={{true}} @fullHeight={{true}} @width="700">
    <Overlay::Header @title="Vehicle Details" @status={{@vehicle.public_id}} @hideStatusDot={{true}}
        @createdAt={{@vehicle.createdAt}} @onPressCancel={{@onPressCancel}}>
    </Overlay::Header>

    <Overlay::Body @wrapperClass="new-service-rate-overlay-body px-4 space-y-4 pt-4" @increaseInnerBodyHeightBy={{1000}}>
        <div class="section-header-actions w-full overflow-x-scroll lg:overflow-x-auto">
            <div class="ui-tabs mt-4">
                <nav>
                    <a href="javascript:;" class="ui-tab {{if (eq this.currentTab "details") 'active' }}" {{on "click" (fn this.changeTab "details" )}}>
                        <FaIcon @icon="circle-info" class="mr-1" />
                        <span>Details</span>
                    </a>
                    <a href="javascript:;" class="ui-tab {{if (eq this.currentTab "tracking") 'active' }}" {{on "click" (fn this.changeTab "tracking" )}}>
                        <FaIcon @icon="satellite-dish" class="mr-1" />
                        <span>Tracking</span>
                    </a>
                    <a href="javascript:;" class="ui-tab {{if (eq this.currentTab "orders") 'active' }}" {{on "click" (fn this.changeTab "orders" )}}>
                        <FaIcon @icon="hard-drive" class="mr-1" />
                        <span>Devices</span>
                    </a>
                </nav>
            </div>
        </div>
        <div class="tab-content tab-{{this.currentTab}}">
            {{#if (eq this.currentTab "details")}}
                <div class="flex flex-col md:flex-row">
                    <div class="lg:flex-none lg:w-40 mb-4 md:mb-0">
                        <div class="w-32">
                            <Image src={{@vehicle.photo_url}} @fallbackSrc={{@vehicle.avatar_url}} alt={{@vehicle.name}} height="128" width="128" class="h-32 w-32" />
                        </div>
                    </div>
                    <div class="flex-1 space-y-4">
                        <ContentPanel @title="Details" @open={{true}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-800">
                            <div class="grid grid-cols-2 gap-2 text-xs md:mb-6 dark:text-gray-100">
                                <div class="field-info-container">
                                    <div class="field-name">Name</div>
                                    <div class="field-value">{{n-a @vehicle.name}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Vehicle</div>
                                    <div class="field-value">{{n-a @vehicle.internal_id}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Plate Number</div>
                                    <div class="field-value">{{n-a @vehicle.plate_number}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">VIN Number</div>
                                    <div class="field-value">{{n-a @vehicle.vin}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Make</div>
                                    <div class="field-value">{{n-a @vehicle.name}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Model</div>
                                    <div class="field-value">{{n-a @vehicle.model}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Year</div>
                                    <div class="field-value">{{n-a @vehicle.year}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Status</div>
                                    <Badge @status={{@vehicle.status}} />
                                </div>
                            </div>

                            <div class="grid grid-cols-1 gap-4 lg:grid-cols-2 lg:gap-2 mb-2 mt-2">
                                <div class="col-span-2">
                                    <div class="field-info-container">
                                        <div class="field-name">Driver Assigned</div>
                                        <div class="field-value">
                                            {{#if @vehicle.driver}}
                                                <DriverCard class="dark:bg-gray-800 rounded-md px-3 py-2" @driver={{@vehicle.driver}} @onClick={{@options.viewDriver}} />
                                            {{else}}
                                                <span>No driver assigned</span>
                                            {{/if}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </ContentPanel>

                        <ContentPanel @title="Avatar" @open={{false}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-800">
                            <div class="grid grid-cols-1 gap-2 text-xs dark:text-gray-100">
                                <div>
                                    <Image alt={{@vehicle.public_id}} src={{@vehicle.avatar_url}} class="w-24 h-24" />
                                </div>
                            </div>
                        </ContentPanel>

                        <ContentPanel @title="Model Information" @open={{false}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-800">
                            <div class="grid grid-cols-1 gap-4 lg:grid-cols-2 lg:gap-2">
                                <div class="field-info-container">
                                    <div class="field-name">0 to 100 Kph</div>
                                    <div class="field-value">{{n-a @vehicle.model_0_to_100_kph}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Body</div>
                                    <div class="field-value">{{n-a @vehicle.model_body}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Doors</div>
                                    <div class="field-value">{{n-a @vehicle.model_doors}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Drive</div>
                                    <div class="field-value">{{n-a @vehicle.model_drive}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Length (mm)</div>
                                    <div class="field-value">{{n-a @vehicle.model_length_mm}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Seats</div>
                                    <div class="field-value">{{n-a @vehicle.model_seats}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Top Speed (kph)</div>
                                    <div class="field-value">{{n-a @vehicle.model_top_speed_kph}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Transmission Type</div>
                                    <div class="field-value">{{n-a @vehicle.model_transmission_type}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Weight (kg)</div>
                                    <div class="field-value">{{n-a @vehicle.model_weight_kg}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Wheelbase (mm)</div>
                                    <div class="field-value">{{n-a @vehicle.model_wheelbase_mm}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Width (mm)</div>
                                    <div class="field-value">{{n-a @vehicle.model_width_mm}}</div>
                                </div>
                            </div>
                        </ContentPanel>

                        <ContentPanel @title="Engine Information" @open={{false}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-800">
                            <div class="grid grid-cols-1 gap-4 lg:grid-cols-2 lg:gap-2">
                                <div class="field-info-container">
                                    <div class="field-name">Engine Bore (mm)</div>
                                    <div class="field-value">{{n-a @vehicle.model_engine_bore_mm}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">CC</div>
                                    <div class="field-value">{{n-a @vehicle.model_engine_cc}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Compression</div>
                                    <div class="field-value">{{n-a @vehicle.model_engine_compression}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Cylinders</div>
                                    <div class="field-value">{{n-a @vehicle.model_engine_cyl}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Position</div>
                                    <div class="field-value">{{n-a @vehicle.model_engine_position}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Power (ps)</div>
                                    <div class="field-value">{{n-a @vehicle.model_engine_power_ps}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Power (rpm)</div>
                                    <div class="field-value">{{n-a @vehicle.model_engine_power_rpm}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Stroke (mm))</div>
                                    <div class="field-value">{{n-a @vehicle.model_engine_stroke_mm}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Torque (nm)</div>
                                    <div class="field-value">{{n-a @vehicle.model_engine_torque_nm}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Torque (rpm)</div>
                                    <div class="field-value">{{n-a @vehicle.model_engine_torque_rpm}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Valves Per Cylinder</div>
                                    <div class="field-value">{{n-a @vehicle.model_valves_per_cyl}}</div>
                                </div>
                            </div>
                        </ContentPanel>

                        <ContentPanel @title="Fuel Information" @open={{false}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-800">
                            <div class="grid grid-cols-1 gap-4 lg:grid-cols-2 lg:gap-2">
                                <div class="field-info-container">
                                    <div class="field-name">Fuel</div>
                                    <div class="field-value">{{n-a @vehicle.model_engine_fuel}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Fuel Cap (l)</div>
                                    <div class="field-value">{{n-a @vehicle.model_fuel_cap_l}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Liters Per km City</div>
                                    <div class="field-value">{{n-a @vehicle.model_lkm_city}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Liters Per km Highway)</div>
                                    <div class="field-value">{{n-a @vehicle.model_lkm_hwy}}</div>
                                </div>

                                <div class="field-info-container">
                                    <div class="field-name">Liters Per km Mixed</div>
                                    <div class="field-value">{{n-a @vehicle.model_lkm_mixed}}</div>
                                </div>
                            </div>
                        </ContentPanel>
                    </div>
                </div>
            {{/if}}
        </div>
    </Overlay::Body>
</Overlay>