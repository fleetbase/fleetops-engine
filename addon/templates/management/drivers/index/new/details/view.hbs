<div class="modal-body-container">
        <div class="flex flex-col md:flex-row">
            <div class="lg:flex-none lg:w-40 mb-4 md:mb-0">
                <div class="w-32">
                    <img src={{this.driver.photo_url}} alt={{this.driver.name}} height="128" width="128" class="h-32 w-32 rounded-md" />
                </div>
            </div>
            <div class="flex-1 grid grid-cols-2 md:grid-cols-3 gap-2">
                <div class="field-info-container ">
                    <div class="field-name">Name</div>
                    <div class="field-value">{{n-a this.driver.name}}</div>
                </div>
                <div class="field-info-container">
                    <div class="field-name">ID</div>
                    <div class="field-value">{{n-a this.driver.public_id}}</div>
                </div>
                <div class="field-info-container">
                    <div class="field-name">Internal ID</div>
                    <div class="field-value">{{n-a this.driver.internal_id}}</div>
                </div>
                <div class="field-info-container md:col-span-3">
                    <div class="field-name">Drivers License</div>
                    <div class="field-value">{{n-a this.driver.drivers_license}}</div>
                </div>
                <div class="field-info-container md:col-span-3">
                    <div class="field-name">Email</div>
                    <div class="field-value">{{n-a this.driver.email}}</div>
                </div>
                <div class="field-info-container md:col-span-3">
                    <div class="field-name">Phone</div>
                    <div class="field-value">{{n-a this.driver.phone}}</div>
                </div>
                <div class="field-info-container md:col-span-3">
                    <div class="field-name">Status</div>
                    <div class="field-value">
                        <Badge @status={{this.driver.status}} />
                    </div>
                </div>
                <div class="field-info-container">
                    <div class="field-name">Current Job</div>
                    <div class="field-value">{{n-a this.driver.current_job_id}}</div>
                </div>
                <div class="field-info-container">
                    <div class="field-name">Vehicle</div>
                    <div class="field-value">
                        {{!-- {{#if this.driver.vehicle_uuid}}
                            <a href="javascript:;" {{on "click" this.viewVehicle}}>{{this.driver.vehicle_name}}</a>
                        {{else}}
                            {{n-a this.driver.vehicle_name}}
                        {{/if}} --}}
                    </div>
                </div>
                <div class="field-info-container">
                    <div class="field-name">Vendor</div>
                    <div class="field-value">
                        {{!-- {{#if this.driver.vendor_uuid}}
                            <a href="javascript:;" {{on "click" this.viewVendor}}>{{this.driver.vendor_name}}</a>
                        {{else}}
                            {{n-a this.driver.vendor_name}}
                        {{/if}} --}}
                    </div>
                </div>
                <div class="field-info-container">
                    <div class="field-name">City</div>
                    <div class="field-value">{{n-a this.driver.city}}</div>
                </div>
                <div class="field-info-container">
                    <div class="field-name">Country</div>
                    <div class="field-value">
                        <CountryName @country={{this.driver.country}} />
                    </div>
                </div>
                <div class="field-info-container md:col-span-3">
                    <div class="field-name">Coordinates</div>
                    <div class="field-value">{{point-coordinates this.driver.location}}</div>
                    {{!-- <a href="javascript:;" class="btn btn-xs btn-default mt-1" {{on "click" this.viewDriverOnMap}}>
                        <FaIcon @icon="map" class="mr-1.5" />
                        <span>View on map</span>
                    </a> --}}
                </div>
            </div>
        </div>
    </div>

