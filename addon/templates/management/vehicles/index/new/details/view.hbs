<div class="modal-body-container">
    <div class="flex flex-col md:flex-row">
        <div class="lg:flex-none lg:w-40 mb-4 md:mb-0">
            <div class="w-32">
                <Image src={{this.vehicle.photo_url}} @fallbackSrc={{this.vehicle.avatar_url}} alt={{this.vehicle.name}} height="128" width="128" class="h-32 w-32" />
            </div>
        </div>
        <div class="flex-1 space-y-4">
            <ContentPanel @title="Details" @open={{true}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-800">
                <div class="grid grid-cols-2 gap-2 text-xs md:mb-6 dark:text-gray-100">
                    <div class="field-info-container">
                        <div class="field-name">Name</div>
                        <div class="field-value">{{n-a this.vehicle.name}}</div>
                    </div>

                    <div class="field-info-container">
                        <div class="field-name">Vehicle</div>
                        <div class="field-value">{{n-a this.vehicle.internal_id}}</div>
                    </div>

                    <div class="field-info-container">
                        <div class="field-name">Plate Number</div>
                        <div class="field-value">{{n-a this.vehicle.plate_number}}</div>
                    </div>

                    <div class="field-info-container">
                        <div class="field-name">VIN Number</div>
                        <div class="field-value">{{n-a this.vehicle.vin}}</div>
                    </div>

                    <div class="field-info-container">
                        <div class="field-name">Make</div>
                        <div class="field-value">{{n-a this.vehicle.name}}</div>
                    </div>

                    <div class="field-info-container">
                        <div class="field-name">Model</div>
                        <div class="field-value">{{n-a this.vehicle.model}}</div>
                    </div>

                    <div class="field-info-container">
                        <div class="field-name">Year</div>
                        <div class="field-value">{{n-a this.vehicle.year}}</div>
                    </div>

                    <div class="field-info-container">
                        <div class="field-name">Status</div>
                        <Badge @status={{this.vehicle.status}} />
                    </div>
                </div>

                <div class="grid grid-cols-1 gap-4 lg:grid-cols-2 lg:gap-2 mb-2 mt-2">
                    <div class="col-span-2">
                        <div class="field-info-container">
                            <div class="field-name">Driver Assigned</div>
                            <div class="field-value">
                                {{#if this.vehicle.driver}}
                                    <DriverCard class="dark:bg-gray-800 rounded-md px-3 py-2" @driver={{this.vehicle.driver}} @onClick={{this.viewDriver}} />
                                {{else}}
                                    <span>No driver assigned</span>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </ContentPanel>

            <ContentPanel @title="Avatar" @open={{false}} @pad={{true}} @panelBodyClass="bg-white dark:bg-gray-800">
                <div class="grid grid-cols-1 gap-2 text-xs dark:text-gray-100">
                    <div>
                        <Image alt={{this.vehicle.public_id}} src={{this.vehicle.avatar_url}} class="w-24 h-24" />
                    </div>
                </div>
            </ContentPanel>
        </div>
    </div>
</div>
{{yield}}